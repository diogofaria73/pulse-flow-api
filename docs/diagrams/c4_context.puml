@startuml C4 Context Diagram
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

title Pulse Flow API - System Context

Person(user, "Healthcare Professional", "A healthcare professional that needs to track and manage hospital errors")

System(pulseFlowApi, "Pulse Flow API", "Hospital Error Tracking System")

System_Ext(notificationSystem, "Notification System", "Sends alerts and notifications to users")
System_Ext(authSystem, "Authentication System", "Handles user authentication")

Rel(user, pulseFlowApi, "Uses", "HTTPS")
Rel(pulseFlowApi, notificationSystem, "Sends notifications", "API")
Rel(pulseFlowApi, authSystem, "Authenticates users", "OAuth/JWT")

@enduml 